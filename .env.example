# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# User Access Control
# Comma-separated list of allowed user IDs (get these by messaging your bot)
ALLOWED_USER_IDS=123456789,987654321,555555555
# Optional: Admin user ID who can manage subscriptions
ADMIN_USER_ID=123456789

# Google Calendar Configuration (Service Account Only)
GOOGLE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your-project"...}
# Optional: For domain-wide delegation, specify the calendar owner email
GOOGLE_CALENDAR_OWNER_EMAIL=your-calendar-owner@gmail.com

# Calendar Settings
CALENDAR_ID=primary
TIMEZONE=America/New_York